generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model user {
  address String @id @unique

  tokensETH             String?
  countOfLobbysETH      Int               @default(0)
  newsETH               String?
  PromSetETH            String?
  PromInputETH          String?
  userLobbyesETH        lobbyETH[]
  userLobbyesHistoryETH lobbyHistoryETH[]

  countOfLobbysBNB     Int               @default(0)
  tokensBNB            String?
  newsBNB              String?
  PromSetBNB           String?
  PromInputBNB         String?
  userLobbyesBNB       lobbyBNB[]
  userLobbyesHistoryBN lobbyHistoryBNB[]
}

model lobbyETH {
  id             Int
  creator        String
  IERC20         String
  players        String
  deposit        String
  countOfPlayers Int
  nowInLobby     Int
  user           user   @relation(fields: [creator], references: [address])

  @@id([creator, id])
}

model lobbyHistoryETH {
  id             Int
  creator        String
  IERC20         String
  players        String
  winner         String
  deposit        String
  countOfPlayers Int
  user           user   @relation(fields: [creator], references: [address])

  @@id([creator, id])
}

model lobbyBNB {
  id             Int
  creator        String
  IERC20         String
  players        String
  deposit        String
  countOfPlayers Int
  nowInLobby     Int
  user           user   @relation(fields: [creator], references: [address])

  @@id([creator, id])
}

model lobbyHistoryBNB {
  id             Int
  creator        String
  IERC20         String
  players        String
  winner         String
  deposit        String
  countOfPlayers Int
  user           user   @relation(fields: [creator], references: [address])

  @@id([creator, id])
}
