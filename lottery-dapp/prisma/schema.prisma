generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["referentialIntegrity"]
}

datasource db {
  provider             = "mysql"
  url                  = env("DATABASE_URL")
  referentialIntegrity = "prisma"
}

model user {
  address String @id @unique

  tokensETH        String?
  countOfLobbysETH Int     @default(0)
  newsETH          String?
  PromSetETH       String?
  PromInputETH     String?
  AutoEnterETH     String?
  messageETH       String?

  countOfLobbysBNB Int     @default(0)
  tokensBNB        String?
  newsBNB          String?
  PromSetBNB       String?
  PromInputBNB     String?
  AutoEnterBNB     String?
  messageBNB       String?

  userLobbyesBNB        lobbyBNB[]
  userLobbyesETH        lobbyETH[]
  userLobbyesHistoryBNB lobbyHistoryBNB[]
  userLobbyesHistoryETH lobbyHistoryETH[]
}

model lobbyETH {
  id             Int
  creator        String
  IERC20         String
  players        String
  deposit        String
  countOfPlayers Int
  nowInLobby     Int
  user           user   @relation(fields: [creator], references: [address])

  @@id([creator, id])
}

model lobbyHistoryETH {
  id             Int
  creator        String
  IERC20         String
  players        String
  winner         String
  deposit        String
  countOfPlayers Int
  user           user   @relation(fields: [creator], references: [address])

  @@id([creator, id])
}

model lobbyBNB {
  id             Int
  creator        String
  IERC20         String
  players        String
  deposit        String
  countOfPlayers Int
  nowInLobby     Int
  user           user   @relation(fields: [creator], references: [address])

  @@id([creator, id])
}

model lobbyHistoryBNB {
  id             Int
  creator        String
  IERC20         String
  players        String
  winner         String
  deposit        String
  countOfPlayers Int
  user           user   @relation(fields: [creator], references: [address])

  @@id([creator, id])
}

model ETH1000 {
  id       Int     @id @default(autoincrement())
  isMinted Boolean @default(false)
  message  String?
  players  Int?
  price    Float?
}

model BNB1000 {
  id       Int     @id @default(autoincrement())
  isMinted Boolean @default(false)
  message  String?
  players  Int?
  price    Float?
}

model tokens {
  address      String  @id @unique
  chain        Int
  isImageAdded Boolean
  symbol       String
  decimals     Int     @default(18)
}
